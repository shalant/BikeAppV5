@page
@* @model IndexModel *@
@{
    ViewData["Title"] = "Home page";
}


<section id="home" class="hero">
    <div class="hero-content">
        <div class="hero-card">
            <div class="card-body">
                <h1>Explore the Area on Two Wheels</h1>
            </div>
        </div>
        <h4>Browse nice bike routes out of Oak Park in any direction, any length</h4>
        <p>Join the members sections to add your own routes for the low price of $5</p>
        <br />
        <a href="/events" class="cta-button">Upcoming Events</a>
    </div>
</section>

<section id="about" class="about-section">
    <div class="about-content">
        <h2>About Us</h2>
        <p>We are a passionate community of cyclists dedicated to sharing the joy of cycling and exploring new horizons.</p>
    </div>
</section>

<section id="events" class="events-section">
    <a href="/Events">
        <h2>Upcoming Events</h2>
    </a>
    <!-- Event cards can be added here -->

</section>

<section id="routes" class="routes-section">
    <a href="/BikeRoutes">
        <h2>Popular Routes</h2>
    </a>

    <!-- Route cards can be added here -->
</section>

<section id="contact" class="contact-section">
    <h2>Contact Us</h2>
    <p>Have questions or ready to join an adventure? Get in touch with us!</p>
    <a href="mailto:info@cyclingadventures.com" class="cta-button">Email Us</a>
</section>


